[color]
  ui = true
[core]
  editor = vim
[merge]
  ff = false
[pull]
  rebase = true
[alias]
  s = status -sb
  k = log --graph --abbrev-commit --decorate --date=local --format=format:\"%C(bold blue)%h%C(reset) - %C(bold green)(%ad)%C(reset) %C(white)%s%C(reset) %C(dim white)%C(reset)%C(bold yellow)%d%C(reset) [%an]\" --all
  l = log --graph --abbrev-commit --decorate --date=local --format=format:\"%C(bold blue)%h%C(reset) - %C(bold green)(%ad)%C(reset) %C(white)%s%C(reset) %C(dim white)%C(reset)%C(bold yellow)%d%C(reset) [%an]\"
